<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:id="@+id/house_item"
    android:background="@drawable/house_bg">

    <ImageView
        android:id="@+id/house_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:id="@+id/house_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/house_image"
        android:padding="16dp">
        <TextView
            android:id="@+id/house_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textFontWeight="600"
            android:textColor="@color/black"
            android:fontFamily="@font/inter"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/house_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:textFontWeight="600"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/house_rent_status_due"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textFontWeight="600"
        android:fontFamily="@font/inter"
        android:textSize="20sp"
        android:padding="16dp"
        android:textColor="@color/white"
        android:layout_below="@+id/house_ll"
        android:background="@drawable/rent_bg"
        android:textAlignment="center"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/house_rent_status_paid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textFontWeight="600"
        android:fontFamily="@font/inter"
        android:textSize="20sp"
        android:padding="16dp"
        android:textColor="@color/white"
        android:layout_below="@+id/house_ll"
        android:background="@drawable/rent_paid_bg"
        android:textAlignment="center"/>
</RelativeLayout>